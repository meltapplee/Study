<Page x:Class="BikeShop.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BikeShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu"
      Background="{StaticResource background}">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="DarkGray" Margin="10,10,0,0"/> <!--회색 원-->
                            <Ellipse Fill="{TemplateBinding Background}" Margin="0,0,10,10"/> <!--이게 흰색 원-->
                            <Viewbox Margin="5,5,15,15">
                                <ContentPresenter />
                            </Viewbox>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>


    <Grid>
        <Button x:Name="Button" Content="Products" HorizontalAlignment="Left" Margin="166,159,0,0" VerticalAlignment="Top" Height="112" Width="112
                " Click="Button_Click"/>
        <Button x:Name="Button1" Content="Live Support" HorizontalAlignment="Left" Margin="342,161,0,0" VerticalAlignment="Top" Height="112" Width="112" Click="Button1_Click"/>
        <Button x:Name="Button2" Content="Email Support" HorizontalAlignment="Left" Margin="516,160,0,0" VerticalAlignment="Top" Height="112" Width="112  " Click="Button2_Click"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,324,0,0" TextWrapping="Wrap" Text="Adventure Work" VerticalAlignment="Top" Height="46" Width="251" FontSize="30" FontWeight="Bold"/>
    </Grid>
</Page>
