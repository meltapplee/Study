<Page x:Class="BikeShop.ProductsManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BikeShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductsManagement"
      Background="{StaticResource background}">

    <Grid>
        <TextBox HorizontalAlignment="Left" Height="51" Margin="116,20,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Name="textBox" Width="562" TextChanged="TextBox_TextChanged"/>
        <DataGrid HorizontalAlignment="Left" Height="309" Margin="27,113,0,0" VerticalAlignment="Top" Name="DataGrid" Width="481" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Border 
            BorderBrush="Black" BorderThickness="1"
            HorizontalAlignment="Left" Height="307" Margin="539,113,0,0"
            VerticalAlignment="Top" Width="228" Background="White"
            DataContext="{Binding SelectedItem, ElementName=DataGrid}"> <!-- ❗ 반드시 ElementName=DataGrid를 명시해야 SelectedItem 바인딩이 올바르게 작동함 -->
            <StackPanel Margin="10">
                <TextBlock Text="Product details"
                           FontWeight="Bold"
                           FontSize="16"
                           HorizontalAlignment="Center"
                           Margin="10" />
                <TextBlock Text="Title" />
                <TextBox Text="{Binding Title, Mode=TwoWay}" />
                <TextBlock Text="Price" />
                <TextBox Text="{Binding Price, Mode=TwoWay}" />
                <TextBlock Text="Color" />
                <TextBox Text="{Binding Color, Mode=TwoWay}" />
                <Border Background="{Binding Color}"
                        Height="10" />
                <TextBlock Text="Reference" />
                <TextBox Text="{Binding Reference, Mode=TwoWay}" />
            </StackPanel>
        </Border>


    </Grid>
</Page>
